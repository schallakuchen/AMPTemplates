[
  {
    "UpdateStageName": "Create AssaultCube Root Directory",
    "UpdateSourcePlatform": "Linux",
    "UpdateSource": "CreateDirectory",
    "UpdateSourceArgs": "{{$FullRootDir}}",
    "SkipOnFailure": false
  },
  {
    "UpdateStageName": "Download AssaultCube Linux Server",
    "UpdateSourcePlatform": "Linux",
    "UpdateSource": "FetchURL",
    "UpdateSourceData": "https://github.com/assaultcube/AC/releases/download/v1.3.0.2/AssaultCube_v1.3.0.2_LockdownEdition_RC1.tar.bz2",
    "UpdateSourceTarget": "{{$FullRootDir}}",
    "UpdateSourceArgs": "assaultcube.tar.bz2",
    "OverwriteExistingFiles": true,
    "SkipOnFailure": false
  },
  {
    "UpdateStageName": "Extract AssaultCube",
    "UpdateSourcePlatform": "Linux",
    "UpdateSource": "Executable",
    "UpdateSourceData": "/bin/bash",
    "UpdateSourceArgs": "-c \"cd '{{$FullRootDir}}' && tar -xjf assaultcube.tar.bz2 && rm -f assaultcube.tar.bz2\"",
    "SkipOnFailure": false
  },
  {
    "UpdateStageName": "Ensure Server Binary Executable",
    "UpdateSourcePlatform": "Linux",
    "UpdateSource": "Executable",
    "UpdateSourceData": "/bin/bash",
    "UpdateSourceArgs": "-c \"chmod +x '{{$FullRootDir}}'/AssaultCube/bin_unix/linux_64/ac_server || true\"",
    "SkipOnFailure": false
  }
]
